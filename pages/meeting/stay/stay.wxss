.list{
  height:80rpx;
  width: 90%;
  margin:0 auto;
  border-bottom: 0.5rpx solid #ddd;
}

.list label{
  font-size: 12px;
  color: black;
  font-weight: bolder;
  line-height:80rpx;
}

.list span{
  font-size: 12px;
  padding-left: 36px;
  line-height:80rpx;
}

.message{
  height:160rpx;
  width: 90%;
  margin:0 auto;
  border-bottom: 0.5rpx solid #ddd;
}

.message label{
  font-size: 14px;
  color: black;
  font-weight: bolder;
  padding-top: 20px;
  padding-bottom: 12px;
}

.info{
  color: #8f8f8f;
  font-size: 13px;
  padding-top: 8px;
}