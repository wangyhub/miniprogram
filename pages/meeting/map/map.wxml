<view>

<view>
  <view class="list">
    <label>名称</label>
    <span>{{meeting.meetingName}}</span>
  </view>
  <view class="list">
    <label>地址</label>
    <span>{{meeting.meetingAddress}}</span>
  </view>
  <view class="list">
    <label>时间</label>
    <span>{{meeting.startTime}}~{{meeting.endTime}}</span>
  </view>
</view>
<view style='height:50rpx;'></view>
<map
  id="map"
  longitude="{{longitude}}"
  latitude="{{latitude}}"
  scale="17"
  bindcontroltap="controltap"
  bindmarkertap="markertap"
  bindregionchange="regionchange"
  style="width: 100%; height: 300px;"
  markers="{{markers}}"
></map>
</view>